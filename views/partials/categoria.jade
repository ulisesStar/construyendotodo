md-dialog
	md-toolbar
		.md-toolbar-tools
			h4 Nueva Categoria
			span(flex)
			md-button(ng-click="close()")
				md-icon clear
	form.md-padding(layout="row" ng-submit="submit(categoria)")
		md-input-container(flex)
			label Nombre
			input(ng-model="categoria.nombre"required)
		md-button.md-raised(type="submit")
			md-icon add